@model LibrosSalesianos.Models.Book
@{
    ViewBag.Title = "_BookPartial";
    var book = Model;
}

<div id="Book-@book.ISBN">
    <table class="table">
        <tbody>
            <tr>
                <td>
                    <a><img src ="@book.Image" /></a>
                </td>
                <td rowspan="2">
                    <div>@Html.Label(@book.Description)</div>
                    <div class="isbn">@Html.Label(@book.ISBN)</div>
                </td>
                <td>
                    @Html.Label(@book.Price.ToString())
                </td>
                <td>
                    @Ajax.ActionLink("Al carrito!", "AddToCart","Shopping",new{controller="Shopping", isbn = book.ISBN, des = book.Description, img = book.Image, price = book.Price},new AjaxOptions{HttpMethod="POST", OnComplete="function(){return false;}"})
                </td>
            </tr>
        </tbody>
    </table>
</div>